<%= form_for(@relation) do |f| %>
  <% if @relation.errors.any? %>
    <div id="error_explanation">
      <h2><%= @relation.errors.count %>箇所エラーがあります。</h2>

      <ul>
      <% @relation.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :following_id %><br />
    <%= f.number_field :following_id %>
  </div>
  <div class="field">
    <%= f.label :followed_id %><br />
    <%= f.number_field :followed_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
